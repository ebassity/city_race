<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="hunt-index">
        <div align="center" class="col-md-6 col-md-offset-3">
          <br><br>
          <h3><font size="+2">My hunts</font></h3>
          <p><%= link_to "New Hunt", new_hunt_path, class: "btn btn-new btn-sm scroll" %></p>
          <br>
            <% @hunts.each do |hunt| %>
              <p><font size="+1"><%= link_to "#{hunt.name}", hunt_path(hunt.id) %><br><br>
                 <%= link_to "Add clues", hunt_path(hunt.id), class: "btn btn-primary btn-sm scroll" %>  <%= link_to "Edit Hunt", edit_hunt_path(hunt.id), class: "btn btn-primary btn-sm scroll" %></font></p><br><br>
              <% end %>
              <br><br>
        </div>
      </div>
    </div>
  </div>
</div>
