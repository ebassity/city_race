<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="hunt-index">
        <div align="center" class="col-md-6 col-md-offset-3">
          <br><br>
          <h3><font size="+2">My Hunts</font></h3>
          <p><%= link_to "New Hunt", new_hunt_path, class: "btn btn-new btn-sm scroll" %></p>
          <br>
            <% @hunts.each do |hunt| %>
              <div class="id_<%= hunt.id %>"><font size="+1"><%= link_to "#{hunt.name}", hunt_path(hunt.id) %>&nbsp;&nbsp;<i><%= hunt.status %></i> <br><br>
                 <%= link_to "Add clues", hunt_clues_path(hunt.id), class: "btn btn-primary btn-sm scroll" %>  <%= link_to "Edit Hunt", edit_hunt_path(hunt.id), class: "btn btn-primary btn-sm scroll" %> <%= link_to "Delete Hunt", hunt_path(hunt.id), method: :delete, class: "btn btn-primary btn-sm scroll", data: { confirm: "Are you sure you want to delete this hunt? This is permanent!" } %></font>
               </div><br><br>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
