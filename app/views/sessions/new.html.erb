<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="form">
        <div align="left" class="col-md-6 col-md-offset-3 form-group">
          <h3>Log in</h3>
          <%= bootstrap_form_tag url: '/login', method: :post do |f| %>
            <%= f.text_field :email %>
            <%= f.password_field :password %>
            <%= f.submit "Submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
