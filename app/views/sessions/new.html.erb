<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="form">
        <div align="left" class="col-md-6 col-md-offset-3 form-group">
          <br><br>
          <h3><font size="+2">Log in</font></h3>
          <br>
          <%= bootstrap_form_tag url: '/login', method: :post do |f| %>
            <%= f.text_field :email %>
            <%= f.password_field :password %>
            <%= f.submit "Submit", class: "btn btn-new btn-sm scroll" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br><br><br /><br>
